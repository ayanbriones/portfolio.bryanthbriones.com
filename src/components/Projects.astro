---
import ProjectCard from './ProjectCard.astro'
import Title from './Title.astro'

const projects = [
  {
    name: 'Eccho Rights',
    description:
      'Migrated the frontend from Laravel to Preact. Built the masonry using isotope and integrated the component to laravel. I also work with the CMS and backend using laravel.',
    technologies: ['Laravel', 'Preact', 'Vite'],
    link: 'https://ecchorights.com/',
    imageUrl: '/images/ecchorights.jpg',
  },

  {
    name: 'Fallen',
    description: 'Build the frontend using AstroJS and ReactJS',
    technologies: ['AstroJS', 'ReactJS', 'Laravel'],
    link: 'https://fallen.ecchorights.com/',
    imageUrl: '/images/fallen microsite.jpg',
  },
  {
    name: 'Eid Card',
    description:
      'Eid Greeting Card where you can download the greeting card with your name on it',
    technologies: ['AstroJS', 'ReactJS'],
    link: '',
    imageUrl: '/images/Eid card.jpg',
  },
  {
    name: 'Little Lemon',
    description:
      'A project in Coursera - Meta Frontend Professional. Users can reserve a table by clicking reservations button or the call to action button',
    technologies: ['ReactJS'],
    link: 'https://little-lemon.bryanthbriones.com/',
    imageUrl: '/images/Little-lemon.png',
  },
]
---

<section
  class='p-4 w-full max-w-full min-w-full md:min-h-[150vh] md:pt-28 md:min-w-[80vw] md:max-w-5xl md:m-auto'
>
  <Title title='Projects' id='projects' class='scroll-mt-12' />
  {
    projects.map((project) => (
      <ProjectCard
        name={project.name}
        description={project.description}
        link={project.link}
        imageUrl={project.imageUrl}
        technologies={project.technologies}
      />
    ))
  }
</section>
